extends layout

block content
  .page-header

  h1(style="font-weight: bold; text-align: center;") Create New Permalinks
  h3(style="font-weight: normal; color:#4DA5F4; text-align: center; margin-bottom: 45px; ") Upload JSON files to preserve embedded URLs forever.

  form(name="uploader", action="/autoTool/uploads", method="post", enctype="multipart/form-data")
    input(type="file", name="xmlFile", id="file", accept=".xml")
    .centerMe.autoTool
      p(style="font-weight:bold; font-size: 20px;") Files Selected:
      .list-group.filesUploaded(hidden=true, id="filesUploaded")
        a(href="#", class="list-group-item active")
      p(style="float:left;") No files selected.
      .fileUpload.btn.btn-primary
        <span>Upload</span>
        <input type="file" class="upload" id="uploadBtn" accept=".xml" multiple=""/>


        
